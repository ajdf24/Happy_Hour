<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.rieger.happyhour.view.fragments.changelocation.GeneralFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Allgemein"
        android:id="@+id/fragment_general_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/fragment_general_location_name"
        android:layout_below="@+id/fragment_general_title"
        android:layout_toRightOf="@+id/fragment_general_location_name_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location Name"
        android:id="@+id/fragment_general_location_name_title"
        android:layout_alignBottom="@+id/fragment_general_location_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Standort"
        android:id="@+id/fragment_general_location_place_title"
        android:layout_alignBottom="@+id/fragment_general_location_place"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_general_location_place"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/fragment_general_location_name"
        android:layout_toRightOf="@+id/fragment_general_location_place_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <it.rieger.happyhour.controller.widget.DynamicImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/fragment_general_locate"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/fragment_general_location_place"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_explore_black"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
