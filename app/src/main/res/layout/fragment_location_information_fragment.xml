<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.LocationInformation">


    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/fragment_location_details_pictures_list_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />

    <ImageButton
        android:id="@+id/fragment_location_information_information_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_info_black"
        android:background="@null"
        android:layout_alignParentRight="true" />

    <it.rieger.happyhour.controller.widget.FavoriteButton
        android:id="@+id/fragment_location_information_button_favorite"
        android:src="@mipmap/ic_favorite_border"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="-15dp"
        android:background="@null"
        android:layout_toLeftOf="@+id/fragment_location_information_information_button" />

</RelativeLayout>
