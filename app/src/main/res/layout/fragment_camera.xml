<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.rieger.happyhour.view.fragments.changelocation.CameraFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_camera_imageview"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_button_pick"
        android:visibility="invisible"
        android:layout_width="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="19dp"
        android:scaleType="center"
        android:gravity="center"
        android:layout_height="40dp"
        android:src="@mipmap/ic_collections_black"
        android:layout_above="@+id/fragment_button_takepicture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_button_takepicture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="invisible"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="19dp"
        android:src="@drawable/ic_menu_camera"
        android:scaleType="center"
        android:gravity="center"
        android:layout_above="@+id/fragment_button_show_buttons"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_button_show_buttons"
        android:layout_width="wrap_content"
        android:src="@mipmap/ic_add_black"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_camera_image_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />

</RelativeLayout>
