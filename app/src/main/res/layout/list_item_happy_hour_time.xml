<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Spinner
        android:id="@+id/list_item_happy_hour_time_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/list_item_happy_hour_time_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/list_item_happy_hour_time_day"
        android:hint="Zeit von bis"
        android:layout_toLeftOf="@+id/list_item_happy_hour_time_delete"
        android:layout_toStartOf="@+id/list_item_happy_hour_time_delete" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_delete_black"
            android:layout_alignTop="@+id/list_item_happy_hour_time_time"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/list_item_happy_hour_time_delete" />


</RelativeLayout>