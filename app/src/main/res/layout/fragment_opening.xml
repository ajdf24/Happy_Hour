        android:layout_alignLeft="@+id/fragment_opening_wednesday_text"
        android:layout_alignStart="@+id/fragment_opening_wednesday_text"
        android:layout_alignRight="@+id/fragment_opening_wednesday_text"
        android:layout_alignEnd="@+id/fragment_opening_wednesday_text" />

    <EditText
        android:id="@+id/fragment_opening_friday_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"
        android:inputType="time"
        android:ems="10"
        android:layout_below="@+id/fragment_opening_thursday_text"
        android:layout_alignLeft="@+id/fragment_opening_thursday_text"
        android:layout_alignStart="@+id/fragment_opening_thursday_text"
        android:layout_alignRight="@+id/fragment_opening_thursday_text"
        android:layout_alignEnd="@+id/fragment_opening_thursday_text" />

    <EditText
        android:id="@+id/fragment_opening_saturday_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"
        android:inputType="time"
        android:ems="10"
        android:layout_below="@+id/fragment_opening_friday_text"
        android:layout_alignLeft="@+id/fragment_opening_friday_text"
        android:layout_alignStart="@+id/fragment_opening_friday_text"
        android:layout_alignRight="@+id/fragment_opening_friday_text"
        android:layout_alignEnd="@+id/fragment_opening_friday_text" />

    <EditText
        android:id="@+id/fragment_opening_sunday_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"
        android:inputType="time"
        android:ems="10"
        android:layout_below="@+id/fragment_opening_saturday_text"
        android:layout_alignRight="@+id/fragment_opening_saturday_text"
